<h2 class="movies-head">Add a New Actor</h2>

<form
  action="/composers/creation"
  method="POST"
  style="width:500px; margin-left:100px"
>
  <div class="form-group">
    <label for="composerName">Name</label>
    <input
      type="text"
      class="form-control"
      id="composerName"
      aria-describedby="nameHelp"
      placeholder="Name"
      name="theName"
    />
  </div>
  <div class="form-group">
    <label for="theNominations">Nominations [limit two]</label>
    <input
      type="text"
      class="form-control"
      aria-describedby="nominationsHelp"
      placeholder="Nomination"
      name="theNominations"
    />
    <br />
    <input
      type="text"
      class="form-control"
      aria-describedby="nominationsHelp"
      placeholder="Nomination"
      name="theNominations"
    />
  </div>
  <div class="form-group">
    <label for="theAwards">Awards [limit two]</label>
    <input
      type="text"
      class="form-control"
      aria-describedby="awardsHelp"
      placeholder="Award"
      name="theAwards"
    />
    <br />
    <input
      type="text"
      class="form-control"
      aria-describedby="awardsHelp"
      placeholder="Award"
      name="theAwards"
    />
  </div>
  <div class="form-group">
    <label for="theSideProjects">Other Projects [limit two]</label>
    <input
      type="text"
      class="form-control"
      aria-describedby="projectsHelp"
      placeholder="Project"
      name="theSideProjects"
    />
    <br />
    <input
      type="text"
      class="form-control"
      aria-describedby="projectsHelp"
      placeholder="Project"
      name="theSideProjects"
    />
  </div>
  <div class="form-group">
    <label for="composerImage">Image URL</label>
    <input
      type="text"
      class="form-control"
      id="composerImage"
      aria-describedby="imageHelp"
      placeholder="Headshot URL"
      name="theImage"
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
